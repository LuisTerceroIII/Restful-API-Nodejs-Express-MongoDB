doctype html
head
    link(rel='stylesheet', href='styles.css')
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Playfair+Display&display=swap")
body
    div(class="principal-container")
        div(class="logo-container")
            img(src="https://cdn2.iconfinder.com/data/icons/4web-3/139/header-account-image-line-512.png", alt="key", class="logo-image")
        h1(class="welcome-text") Profile

        form(action="/post" method="POST", class="form-container", id='form')
            p(class='welcome-text') Name:     <b>#{name}</b>
            p(class='welcome-text') Last name: <b>#{lastName}</b>
            p(class='welcome-text') Age:<b>#{age}</b>
            p(class='welcome-text') Email:<b>#{email}</b>
        div(class='button-container')
            a(href="/put",class='a-buttons') Edit
            a(href="/delete",class='a-buttons') Delete
            button( value='Delete', type='submit', class='button')